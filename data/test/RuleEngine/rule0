internal date = [
   { {</DIGIT>#year "年"}? { </DIGIT>#month "月" </DIGIT>#day "日" } }
   { ["今日" "今天"]#today }
   { ["明日" "明天"]#tomorrow }
]#date

internal city = {
    </place/city>
}#city

internal airport = [
    { @city ["机场" "飞机场"] }
    { @city </place/airport> ["机场" "飞机场"]? }
]#airport

flight = [
   { { {"从"}? {[@city @airport]}#from "到" {[@city @airport]}#to} { {"的"}? </domain/ticket/Flight>}? }
]`domain="flight"`

weather = [
    ^{ {@city }? ^{ {@date}? {"的"}? { </domain/weather> } }}
]`domain="weather";intent="lookfor"`
